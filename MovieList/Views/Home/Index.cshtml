@model IEnumerable<Movie>
@{
    ViewBag.Title = "My Movies";
}

<h2>Movie List</h2>
<a asp-controller="Movie" asp-action="Add" >Add New Movie</a>
    <table class="table table-striped">
        <thead>
           <th> Name</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Rating</th>
            <th></th>
        </thead>
        <tbody>
            @foreach(Movie m in Model)
            {
                <tr>
                    <td>@m.Name</td>
                    <td>@m.Year</td>
                    <td>@m.Genre.GenreName</td>
                    <td>
                    @for (int i = 0; i < 5; i++)
                    {
                        if (i < @m.Rating)
                        {
                            <span class="fa-solid fa-star"></span>
                        }
                        else
                        {
                            <span class="fa-regular fa-star"></span>
                        }
                    }

                </td>
                    <td>
                    <a asp-controller="Movie" asp-action="Edit" asp-route-id="@m.MovieId" asp-route-slug="@m.Slug">Edit</a>
                        <a asp-controller="Movie" asp-action="Delete" asp-route-id="@m.MovieId" asp-route-slug="@m.Slug">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

